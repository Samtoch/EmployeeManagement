@model HomeDetailsViewModel

@{
    //Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "My Details Page";
}

<body>
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>Name: @Model.Employee.Name</h1>
                </div>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/myface.jpg" asp-append-version="true" style="width:300px;height:200px"/>
                <h4>Id: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4>Department: @Model.Employee.Department</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>

        </div>

    </div>
</body>